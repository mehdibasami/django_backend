{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Runserver 0.0.0.0:8000",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "autoReload": {
        "enable": true
      }
    }
  ]
}